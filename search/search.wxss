/* search/search.wxss */
.search {
    background-color: #F5F6FA;
    min-height: 100%;
    padding-top: 30rpx;
}

.search_top {
    background-color: #EBEDF0;
    height: 60rpx;
    margin: 0 30rpx;
    border-radius: 50rpx;
    position: relative;
    padding: 4rpx;
}

.search_ficon {
    position: absolute;
    left: 30rpx;
    top: 10rpx;
    width: 40rpx;
    height: 40rpx;
}

.search_top input {
    width: 550rpx;
    margin-left: 80rpx;
    line-height: 60rpx;
    height: 60rpx;
    float: left;
    color: #666;
    font-size: 28rpx;
}

.close {
    position: absolute;
    right: 20rpx;
    width: 60rpx;
    height: 60rpx;
}

.search_list {
    margin: 30rpx 30rpx 0;
    background-color: #fff;
    border-radius: 20rpx;
    height: auto;
    display: flex;
}



.list_l {
    margin: 20rpx;
    width: 170rpx;
    height: 170rpx;
}

.list_l image {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
}

.list_r {
    width: 500rpx;  
    margin-right: 20rpx;
}


.title {
    font-size: 28rpx;
    color: #262E3A;
    line-height: 50rpx;
    margin-top: 20rpx;   
    /* width: 80%;  */
    overflow: hidden;
    height: 60rpx;
}




.list_r text {
    margin: 0;
    text-align: justify;
    font-size: 24rpx;
    color: rgba(110, 117, 128, 1);
    overflow-wrap: break-word;
    font-family: PingFangSC-Regular;
    line-height: 36rpx;
    text-align: left;
    margin-top: -16rpx;
    display: -webkit-box;
    word-break: break-all;  
    text-overflow: ellipsis;  
    overflow: hidden;  
    -webkit-box-orient: vertical;  
    -webkit-line-clamp:2; 
}

.look{
    background-color: #4DBEC1;
    width: 130rpx;
    height: 40rpx;
    line-height: 39rpx;
    font-size: 24rpx;
    color: #fff;
    text-align: center;
    border-radius: 20rpx;
    margin-top: 30rpx;
    /* margin-bottom: 30rpx; */
    float: right;
